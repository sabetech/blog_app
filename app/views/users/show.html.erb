<div>
  <div class='users'>
    <div class='img'>
      <img class="block mx-auto h-24 rounded-full sm:mx-0 sm:shrink-0" src="<%= @user.photo %>" width="100" height="100" alt="Profile picture">
    </div>
    <div class='main'>
      <div class='name'>
        <%= @user.name %>
      </div>
      <div>
        <p class='counter'>
        <%= !@user.posts_count ? 'No post yet by this user' : "#{@user.posts_count} post(s) has been published" %>
        </p>
      </div>
      <div class='counter'>
        Joined in <%= @user.created_at.strftime("%B, %e at %H:%M") %>
      </div>
    </div>
  </div>
  <div class='bio'>
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
  </div>
  <div class='posts'>
   <%=  render @user.three_most_latest_posts %>
  </div>
  <div class='link'>
    <%=  link_to user_posts_path(@user) do %>
      <span>
        See all posts
      </span>
    <% end %>
  </div>
</div>